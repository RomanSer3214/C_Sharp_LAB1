<Window x:Class="FirstWPFApp.FirstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWPFApp"
        mc:Ignorable="d"
        Title="Дані студентів" Height="500" Width="800" Background="#808080" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="StudentIDTB"  HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="260" Height="40" Text="Номер залікової книжки" />
        <TextBox x:Name="FullNameTB" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="260" Height="40" Text="ПІП" />
        <TextBox x:Name="PersonalDataTB" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Width="260" Height="40" Text="Особисті дані" />

        <Button Content="Додати студента" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10,240,0,0" Click="AddStudentButton_Click" />
        <Button Content="Видалити студента" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="150,240,0,0" Click="DeleteStudentButton_Click" />

        <TextBox x:Name="FileContentTB" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,40,10,0" Width="360" Height="300" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />
        
        <Button x:Name="GoToMainWin" Content="До головного вікна" HorizontalAlignment="Left" Margin="50,0,0,50" VerticalAlignment="Bottom" Width="142" Height="60" Background="#FF3AEC7B" Click="GoToMainWin_Click"/>
    </Grid>
</Window>
